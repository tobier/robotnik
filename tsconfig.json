{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "out",
      "sourceRoot" : "src",
      "sourceMap": true,
      "declaration": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "exclude": [
      "out",
      "nodule_modules",
      "tests"
    ],
    "lib": ["es2015"],
  }